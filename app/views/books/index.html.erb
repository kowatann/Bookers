
<h1>投稿一覧</h1>

<table>
  
  <tr>
    <th>本のタイトル</th> <th>感想</th>
  </tr>
  
  <tr>
    <td>青空</td> <td>感動した</td>
  </tr>
  
</table>



<% @books.each do |book| %>

<p>本のタイトル</p>

<%= link_to book.title, book_path(book.id) %>
  
<% end %>

<h1>新規投稿</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
<% end %>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
	
  <h4>感想</h4>
  
  <%= f.text_area :body %>
	
  <%= f.submit '投稿' %>
  
  
  
  
  
<% end %>
